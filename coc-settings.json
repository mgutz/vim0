{
  "diagnostic.displayByAle": true,

  // needed if npm is dynamic
  //"tsserver.npm": "/home/mgutz/.nvm/versions/node/v10.15.3/bin/npm",

  "coc.preferences.formatOnSaveFiletypes": [
    "javascript", "jsx", "css", "html",
    "Markdown", "yaml", "less", "svelte",
    "typescript", "javascript_jsx", "typescript.tsx"
  ],

  "eslint.filetypes": ["javascript", "typescript", "typescriptreact", "javascriptreact", "typescript.tsx"],

  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      // DO NOT start at home folder, it wil not work
      "ignoredRootPaths": ["~"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    }
  },

  "suggest.echodocSupport": true,
  "suggest.enablePreview": true,
  "suggest.maxCompleteItemCount": 20,
  "suggest.noselect": true,

  "javascript.suggestionActions.enabled": false


}
